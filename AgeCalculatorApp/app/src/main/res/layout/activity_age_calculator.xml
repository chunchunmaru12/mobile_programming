<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AgeCalculator">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      >
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          >
          <TextView
              android:id="@+id/inputBirthDate"
              android:layout_width="140dp"
              android:layout_height="40dp"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textAlignment="center"
              android:padding="10dp"
              android:background="@android:color/black"
              />
          <Button
              android:id="@+id/btnBirthDate"
              android:layout_width="140dp"
              android:layout_height="40dp"
              android:text="BirthDate"
              android:background="@android:color/background_dark"
              />
      </LinearLayout>

      <TextView
          android:text="TO"
          android:layout_margin="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textColor="@android:color/background_dark"
          />
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          >
          <TextView
              android:id="@+id/currentDateTxt"
              android:layout_width="140dp"
              android:layout_height="40dp"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textAlignment="center"
              android:padding="10dp"
              android:background="@android:color/black"
              />
          <Button
              android:id="@+id/btnCurrentDate"
              android:layout_width="140dp"
              android:layout_height="40dp"
              android:text="Today's Date"
              android:background="@android:color/background_dark"
              />

      </LinearLayout>

  </LinearLayout>
    <Button
        android:id="@+id/calculateAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcualte Age"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            >
            <TextView
                android:id="@+id/resYear"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@android:color/background_dark"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Year"
                android:background="@color/purple_500"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"


            >
            <TextView
                android:id="@+id/resMonth"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@android:color/black"
                />
            <TextView

                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Month"
                android:background="@color/purple_500"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"

                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            >
            <TextView
                android:id="@+id/resDay"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@android:color/black"

                />
            <TextView

                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Day"
                android:background="@color/purple_500"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>