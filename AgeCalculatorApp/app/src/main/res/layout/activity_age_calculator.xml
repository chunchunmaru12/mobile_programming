<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AgeCalculator"
    android:padding="16dp">

    <!-- Date Selection Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Birth Date Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/inputBirthDate"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/btnBirthDate"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="BirthDate"
                android:background="@android:color/background_dark" />
        </LinearLayout>

        <!-- Separator -->
        <TextView
            android:text="TO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp" />

        <!-- Current Date Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentDateTxt"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/btnCurrentDate"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Today's Date"
                android:background="@android:color/background_dark" />
        </LinearLayout>
    </LinearLayout>

    <!-- Calculate Button -->
    <Button
        android:id="@+id/calculateAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Age"
        android:layout_marginBottom="20dp" />

    <!-- Result Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Year Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/resYear"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@android:color/background_dark" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Year"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:paddingTop="10dp" />
        </LinearLayout>

        <!-- Month Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/resMonth"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Month"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:paddingTop="10dp" />
        </LinearLayout>

        <!-- Day Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resDay"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Day"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:paddingTop="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
